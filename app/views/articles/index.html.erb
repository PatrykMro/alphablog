<h1> This is a list of articles </h1>
<p>
  <%= link_to "Create new article", new_article_path %>
</p>
<table>

  <tr>
    <th> Title </th>
    <th> Description </th>
  </tr>
  <% @articles.each do |a| %>
  <tr>
    <td><%= a.title %></td>
    <td><%= a.description %></td>
    <td><%= link_to 'edit', edit_article_path(a) %></td>
    <td><%= link_to 'show', article_path(a) %></td>
  </tr>
  <% end %>
</table>
